<!DOCTYPE html>
<html>
<head>
  <title>Мое что то...</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("logo.jpg") %>
    <%= @page_title || "Магазин..." %>
  </div>
  <div id= "columns">
    <div id="side">
     <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>

    <ul>
      <li><a href="http://www....">Домашняя страница</a></li>
      <li><a href="http://www..../faq">Вопросы</a></li>
      <li><a href="http://www..../news">Новости</a></li>
      <li><a href="http://www..../contact">Контакты</a></li>
      <li><a> <%= l Time.now, :format => :short %></a></li>
    </ul>
<% if session[:user_id] %>
  <ul>
    <li><%= link_to 'Заказы', orders_path %></li>
    <li><%= link_to 'Продукты', products_path %></li>
    <li><%= link_to 'Пользователи', users_path %></li>
  </ul>
<%= button_to 'Выход', logout_path, method: :delete %>
<% end %>

  </div>
  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>
