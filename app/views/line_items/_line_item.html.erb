<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
      <td><%= line_item.quantity %>&times;</td>
      <td><%= line_item.product.title %> </td>
      <td class="item_price"><%= number_to_currency(line_item.total_price, options={ :unit => "Руб", :format => "%n%u", :separator =>","}) %></td>
      <td><%= button_to 'Удалить', line_item, :method => :delete, :confirm => 'Вы уверены?' %></td>
</tr>
