<h1>Список корзин</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= link_to 'Показать', cart %></td>
        <td><%= link_to 'Редактировать', edit_cart_path(cart) %></td>
        <td><%= link_to 'Удалить', cart, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая корзина', new_cart_path %>
